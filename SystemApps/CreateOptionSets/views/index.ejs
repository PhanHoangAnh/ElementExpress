<!DOCTYPE html>
<html lang="">

<head>
	<%-include(head) %>
	<link rel="stylesheet" href="css/optionSets.css">
</head>

<body>
	<%-include(navbar) %>
	<template id="optionSet">
        <div class="row" style="margin-top: 5px;margin-bottom: 5px;" app-role="optionSet">
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <img src='../img/logo.png' id="iconHolder" app-role="icon">
            </div>
            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                <legend app-role="setsName">Set's Name</legend>
            </div>
        </div>
    </template>
    <template id="configOptImg">
        <div class="row">
            <span app-role="attValue" class="col-xs-10 col-sm-10 col-md-10 col-lg-10"></span>
            <span app-role="attImage" class="col-xs-2 col-sm-2 col-md-2 col-lg-2"></span>
        </div>
    </template>
    <template id='extraOptionImgHandler'>
        <div class="ctr-select-box" app-role="selectHandler" onfocus="activeShow(this, event)" onblur="hideShow(this)" tabindex = "0" >
            <div app-role="selectbox" class="ctr-select-value" onclick="toggleShow(this, event)" > Select here
            </div>
            <div app-role="dropdown" class="ctr-select-down">
                <div app-role="droppad">
                </div>
                <div class="s-bottom">
                    <a class="btn" onclick="addMoreOrEditImageOptions(this,event)" app-role = "addMoreImgOption"><i class="fa fa-plus"></i> Add More</a>
                </div>
            </div>
        </div>
    </template>
    <template id='extraOptionImgItem'>
        <div class="ctr-select-option" app-role="selectItem" onclick='getOptionImage(this)' onfocus="itemFocuses(this)" tabindex = "0">
            <div class="s-img"><img app-role="attImg" src="" class="img-flag"></div>
            <div class="s-content">
                <label app-role="attName"></label>
                <div class="s-button">
                    <a class="btn" onclick="addMoreOrEditImageOptions(this,event)" app-role = "deleteImgOption"><i class="fa fa-times" ></i> Delete</a>
                    <a class="btn" onclick="addMoreOrEditImageOptions(this,event)" app-role = "editImgOption"><i class="fa fa-pencil"></i> Edit</a>
                </div>
            </div>
        </div>
    </template>
    <template id = "notification">
        <div data-notify="container" class="col-xs-11 col-sm-3 alert alert-{0}" role="alert">
            <button type="button" aria-hidden="true" class="close" data-notify="dismiss">Ã—</button>           
            <span data-notify="icon"></span>
            <strong><span data-notify="title">{1}</span></strong>
            <hr style="margin:5px">
            <span style = "display:block; text-align:center" data-notify="message">{2}</span>
            <div class="progress" data-notify="progressbar" style = "height: 5px">
                <div class="progress-bar progress-bar-{0}" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%; "></div>
            </div>
            <a href="{3}" target="{4}" data-notify="url"></a>
        </div>
    </template>
	<section class="heading-page" style="background:url('imgs/gamebanner_02.jpg') no-repeat top center;">
        <div class="container-fluid">
            <div class="col-md-12">
                <h1>Create Options Set</h1>
            </div>
        </div>
    </section>
    <hr>
	<div class="container-fluid attribute-sets" id="start-offset" style="min-height: 100%">
		        <!--Left Sidebar-->
        <div class="col-md-6">
            <fieldset class="scheduler-border">
                <legend class="scheduler-border">Create Option Set by Drag & Drop </legend>
                <div class="row">
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2" id="SetsIcon">
                        <img src='imgs/logo.png' id="iconHolder" data-toggle="modal" data-target="#m_icon">
                    </div>
                    <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10" id="SetsName">
                        <legend data-controltype="label">Set's Name</legend>
                    </div>
                </div>
                <div id="div2" class="col-xs-12 col-sm-12 col-md-12 col-lg-12"></div>
            </fieldset>
        </div>
        <!--/Left Sidebar-->
        <!-- Right Sidebar -->
        <div class="col-md-6">
            <fieldset class="scheduler-border">
                <legend class="scheduler-border">Input Types</legend>
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="active">
                        <a href="#standardElement" role="tab" data-toggle="tab">
                            <i class="fa fa-circle"></i> Standard Elements
                        </a>
                    </li>
                    <li>
                        <a href="#timeElements" role="tab" data-toggle="tab" onclick="saveElement()">
                            <i class="fa fa-circle-o"></i> Time Elements
                        </a>
                    </li>
                    <li>
                        <!-- <a href="#otherElements" role="tab" data-toggle="tab" onclick="saveElement()">
                            <i class="fa fa-circle-thin"></i> Other Elements
                        </a> -->
                        <a href="#otherElements" role="tab" data-toggle="tab">
                            <i class="fa fa-circle-thin"></i> Other Elements
                        </a>
                    </li>
                    <!--                         <li>
                    <a href="#jsonoutput" role="tab" data-toggle="tab" onclick="saveElement()">
                        <i class="fa fa-code"></i> JSON output
                    </a>
                </li> -->
                    <li>
                        <a href="#LoadOptionSets" role="tab" data-toggle="tab" onclick="requestOptionSets()">
                            <i class="fa fa-bars"></i> Manage OptionSets
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="standardElement" class="connectedSortable tab-pane fade active in">
                        <!-- Controls Attribute start here -->
                    </div>
                    <div id="timeElements" class="connectedSortable tab-pane fade">
                        <!-- Controls Attribute start here -->
                    </div>
                    <div id="otherElements" class="connectedSortable tab-pane fade">
                        <!-- Controls Attribute start here -->
                    </div>
                    <!--                         <div id="jsonoutput" class=" tab-pane fade " style="margin-top:25px">
                    Controls Attribute start here
                <pre id="printJSON" class="container-fluid">JSON Output</pre>
            </div> -->
                    <div id="LoadOptionSets" class="connectedSortable tab-pane fade">
                        <!-- Controls Attribute start here -->
                    </div>
                </div>
            </fieldset>
        </div>
	</div>
	<div id="end-offset"></div>
	<section class="divider">
        <div style="padding: 70px 0; text-align: center;">
            <button type="button" class="btn btn-primary" style="width: 100px;" onclick="saveAttributeSets(this)">Save</button>
            <button type="button" class="btn btn-success" style="width: 100px;" onclick="cloneSet()">Clone</button>
            <button type="button" class="btn btn-info" style="width: 100px;" onclick="createNewSet()">Create New</button>
            <button type="button" class="btn btn-danger" style="width: 100px;" onclick="deleteSet()">Delete</button>
        </div>
    </section>
    <footer>
        <div class="col-md-12 footer-inner">
            @Copyright:abcd@abc.jsc
        </div>
	</footer>
	
    <div class="modal fade" id="m_icon" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Select Icon for this Option Sets.</h4>
                </div>
                <div class="modal-body">
                    <p>Drag and zoom the image to make an icon</p>
                    <div class="row">
                        <div class="col-md-9">
                            <div class="imageBox" id='iconImg' style="height: 400px;">
                                <div class="thumbBox" id="thumbIcon"></div>
                                <div class="spinner" style="display: none" id="spinnerIcon">Loading...</div>
                            </div>
                            <div class="action">
                                <span class="file-input btn btn-primary btn-file">
                        Browse&hellip;
                        <input type="file" multiple id='iconFile'>
                    </span>
                                <!--input type="button" id="btnCrop" class="btn btn-primary btncrop" value="Crop"-->
                                <input type="button" id="icon_btnZoomIn" class="btn btn-primary" value="+" style="float: right">
                                <input type="button" id="icon_btnZoomOut" class="btn btn-primary" value="-" style="float: right">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="preview">
                                <img id='icon_preview' src="">
                            </div>
                            <div class="preview-md">
                                <img id='icon_preview-md' src="">
                            </div>
                            <div class="preview-sm">
                                <img id='icon_preview-sm' src="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Done</button>
                </div>
            </div>
        </div>
    </div>
    <!--  -->
    <!-- Modal -->
    <div id="imgOptionsModal" class="modal fade" role="dialog" style="z-index: 2000;">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Image Options</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="row" style = "padding-bottom: 15px">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                    <input type="text" id="attImgName" app-role="attImgName" onchange="attImgRatio_change(event,this)" name="Attribute Name" placeholder="Option Name" style = "width:80%">
                                </div>
                                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                    <input type="number" id="attImgXRatio" app-role="attImgXRatio" name="x-ratio" placeholder="X ratio" onchange="attImgRatio_change(event,this)" >
                                </div>
                                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                    <input type="number" id="attImgYRatio"  app-role="attImgYRatio" name="y-ratio" placeholder="Y ratio" onchange="attImgRatio_change(event,this)">
                                </div>
                            </div>
                            </div>
                            <div class="imageBox" id='attImageBox' style="height: 400px;" app-role="imageBox">
                                <div class="thumbBox" id="attImageThumb" app-role="thumbBox"></div>
                                <div class="spinner" id = "attSpinner" style="display: none" id="spinnerIcon">Loading...</div>
                            </div>
                            <div class="action">
                                <span class="file-input btn btn-primary btn-file">
                                Browse&hellip;
                                <input type="file" multiple id='attImgSource'>
                            </span>
                                <!--input type="button" id="btnCrop" class="btn btn-primary btncrop" value="Crop"-->
                                <input type="button" id="att_btnZoomIn" class="btn btn-primary" value="+" style="float: right">
                                <input type="button" id="att_btnZoomOut" class="btn btn-primary" value="-" style="float: right">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="preview">
                                <img id='attPreview' src="">
                            </div>
                            <div class="preview-md">
                                <img id='attPreviewMd' src="">
                            </div>
                            <div class="preview-sm">
                                <img id='attPreviewSm' src="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id ="attImgOptSave" class="btn btn-default" data-dismiss="modal">Save</button>
                </div>
            </div>
        </div>
    </div>
	<!--  -->
	<script src="https://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
	<script src="js/chiplcrop.js" type="text/javascript" charset="utf-8"></script>
	<script src="js/controls.js" type="text/javascript" charset="utf-8"></script>
	<script src="js/DragNDrop.js" type="text/javascript" charset="utf-8"></script>
	    <!--  -->
		<%-include(scripts) %>
		<%-include(background) %>

</body>

</html>